# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cloudquery_security
POSTGRES_USER=cloudquery
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=cloudquery_security

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# Authentication
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CloudQuery Configuration
CLOUDQUERY_API_KEY=your-cloudquery-api-key

# Cloud Provider Credentials
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# GCP
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Azure
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Security Settings
ENCRYPTION_KEY=your-32-byte-encryption-key-here
HASH_SALT=your-hash-salt-here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

